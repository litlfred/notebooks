{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://litlfred.github.io/notebooks/schema/common/metadata.schema.json",
  "title": "Common Metadata Schema",
  "description": "Shared schema for widget metadata",
  "type": "object",
  "properties": {
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "modified": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp"
    },
    "version": {
      "type": "string",
      "description": "Widget version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "author": {
      "type": "string",
      "description": "Widget author"
    },
    "description": {
      "type": "string",
      "description": "Widget description"
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Widget tags for categorization"
    },
    "instance_id": {
      "type": "string",
      "description": "Unique widget instance identifier"
    }
  },
  "additionalProperties": true
}