{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://litlfred.github.io/notebooks/schema/sticky-note/output.schema.json",
  "title": "Sticky Note Output Schema",
  "description": "Output data from sticky note widget",
  "type": "object",
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the rendering was successful"
    },
    "execution_time": {
      "type": "number",
      "description": "Execution time in milliseconds"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when rendering completed"
    },
    "rendered_html": {
      "type": "string",
      "description": "HTML rendered from the markdown content"
    },
    "markdown_content": {
      "type": "string",
      "description": "Original markdown content"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "word_count": {"type": "integer"},
        "character_count": {"type": "integer"},
        "markdown_features": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  },
  "required": ["success", "timestamp", "rendered_html"],
  "additionalProperties": false
}