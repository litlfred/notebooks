{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://litlfred.github.io/notebooks/schema/sticky-note/input.schema.json",
  "title": "Sticky Note Input Schema",
  "description": "Input parameters for sticky note widget",
  "type": "object",
  "properties": {
    "content": {
      "type": "string",
      "description": "Markdown content of the note",
      "default": "# New Note\n\nEdit to add content..."
    },
    "show_note": {
      "type": "boolean",
      "description": "Whether to show the note by default",
      "default": true
    },
    "title": {
      "type": "string",
      "description": "Optional title for the note",
      "default": "Sticky Note"
    },
    "background_color": {
      "type": "string",
      "description": "Background color for the note",
      "default": "#fff3cd",
      "pattern": "^#[0-9a-fA-F]{6}$"
    }
  },
  "required": [],
  "additionalProperties": false
}