{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{{SCHEMA_BASE_URL}}/sticky-note.json",
  "title": "Sticky Note Widget Schemas",
  "description": "Input and output schemas for the sticky note widget",
  "definitions": {
    "input": {
      "$id": "#/definitions/input",
      "type": "object",
      "title": "Sticky Note Input Schema",
      "description": "Input parameters for sticky note widget",
      "allOf": [
        {"$ref": "{{SCHEMA_BASE_URL}}/common.json#/definitions/markdown_content"},
        {"$ref": "{{SCHEMA_BASE_URL}}/common.json#/definitions/ui_configuration"}
      ],
      "properties": {
        "show_note": {
          "type": "boolean",
          "description": "Show or hide the note content",
          "default": true
        }
      }
    },
    "output": {
      "$id": "#/definitions/output",
      "type": "object",
      "title": "Sticky Note Output Schema",
      "description": "Output data from sticky note widget",
      "allOf": [
        {"$ref": "{{SCHEMA_BASE_URL}}/common.json#/definitions/execution_result"}
      ],
      "properties": {
        "rendered_html": {
          "type": "string",
          "description": "Rendered HTML output"
        },
        "metadata": {
          "allOf": [
            {"$ref": "{{SCHEMA_BASE_URL}}/common.json#/definitions/metadata"}
          ],
          "properties": {
            "visible": {"type": "boolean"},
            "content_length": {"type": "integer"},
            "rendered_length": {"type": "integer"}
          }
        }
      }
    }
  }
}