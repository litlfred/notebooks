{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Weierstrass Time-Series Widget Input",
  "description": "Input schema for time evolution visualization of ℘(z(t)) along particle trajectories",
  "type": "object",
  "properties": {
    "p": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 50.0,
      "default": 11,
      "description": "Lattice parameter p (real period)"
    },
    "q": {
      "type": "number", 
      "minimum": 0.1,
      "maximum": 50.0,
      "default": 5,
      "description": "Lattice parameter q (imaginary period coefficient)"
    },
    "N": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 3,
      "description": "Truncation level for lattice sum"
    },
    "particles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "z0": {
            "type": "object",
            "properties": {
              "real": {"type": "number"},
              "imag": {"type": "number"}
            },
            "required": ["real", "imag"],
            "description": "Initial position (complex)"
          },
          "v0": {
            "type": "object", 
            "properties": {
              "real": {"type": "number"},
              "imag": {"type": "number"}
            },
            "required": ["real", "imag"],
            "description": "Initial velocity (complex)"
          }
        },
        "required": ["z0", "v0"]
      },
      "minItems": 1,
      "maxItems": 10,
      "default": [
        {
          "z0": {"real": 2.0, "imag": 1.0},
          "v0": {"real": 0.0, "imag": 1.0}
        }
      ],
      "description": "List of particles with initial conditions"
    },
    "dt": {
      "type": "number",
      "minimum": 1e-6,
      "maximum": 1.0,
      "default": 0.01,
      "description": "Time step for integration"
    },
    "T": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 100.0,
      "default": 10.0,
      "description": "Total integration time"
    },
    "blow_thresh": {
      "type": "number",
      "minimum": 1.0,
      "maximum": 100.0,
      "default": 10.0,
      "description": "Blow-up detection threshold for |Δz|"
    },
    "show_real": {
      "type": "boolean",
      "default": true,
      "description": "Show real part of ℘(z(t))"
    },
    "show_imaginary": {
      "type": "boolean", 
      "default": true,
      "description": "Show imaginary part of ℘(z(t))"
    },
    "grid": {
      "type": "boolean",
      "default": true,
      "description": "Show grid on plots"
    },
    "legend": {
      "type": "boolean",
      "default": true,
      "description": "Show legend with particle labels"
    }
  },
  "required": ["p", "q", "N", "particles", "dt", "T"],
  "additionalProperties": false
}